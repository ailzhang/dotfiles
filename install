# A list of pkgs
sudo apt install curl zsh xclip ncdu

sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

DIR=`pwd`
git submodule update --init

cd ~
cp -r $DIR/.zsh ~/
cp $DIR/.vimrc ~/.vimrc
cp $DIR/.zshrc ~/.zshrc
cp $DIR/.gitconfig ~/.gitconfig
cp $DIR/.tmux.conf ~/.tmux.conf
vim

